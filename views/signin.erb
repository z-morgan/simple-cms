<% if session[:msg] %>
  <p class="flash"><%= session.delete(:msg) %></p>
<% end %>

<form action="/users/signin" method="post">
  <label>
    Username:
    <input type="text" name="username">
  </label>
  
  <label>
    Password:
    <input type="password" name="password">
  </label>

  <input type="submit" value="Sign In">
</form>